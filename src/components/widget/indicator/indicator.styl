@-webkit-keyframes fadeIn
  from
    opacity 0
  to
    opacity 1

@keyframes fadeIn
  from
    opacity 0
  to
    opacity 1

@-webkit-keyframes fadeOut
  from
    opacity 1
  to
    opacity 0

@keyframes fadeOut
  from
    opacity 1
  to
    opacity 0

.animated
  -webkit-animation-duration 0.6s
  animation-duration 0.6s
  -webkit-animation-fill-mode both
  animation-fill-mode both

.fadeIn
  -webkit-animation-name fadeIn
    animation-name fadeIn

.fadeOut
  -webkit-animation-name fadeOut
  animation-name fadeOut

.indicator
  z-index 2147483647
  .indicator-mask
    position fixed
    left 0
    right 0
    top 0
    bottom 0
    background: rgba(0,0,0,0)
  .indication-content
    position fixed
    left 50%
    top 50%
    width 110px
    height 110px
    display table
    color #FBFBFB
    transform translate(-50%,-50%)
    border-radius 4px
    background: rgba(0,0,0,.7)
    box-sizing border-box
    & > div
      display table-cell
      height 90px
      vertical-align middle
      & > img
        display block
        margin 0 auto
        width 32px
        height 32px
      & > div
        margin-top 10px
        text-align center
        font-size 14px


















