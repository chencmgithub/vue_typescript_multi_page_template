@-webkit-keyframes fadeIn
  from
    opacity 0
  to
    opacity 1

@keyframes fadeIn
  from
    opacity 0
  to
    opacity 1

@-webkit-keyframes fadeOut
  from
    opacity 1
  to
    opacity 0

@keyframes fadeOut
  from
    opacity 1
  to
    opacity 0

.animated
  -webkit-animation-duration 0.6s
  animation-duration 0.6s
  -webkit-animation-fill-mode both
  animation-fill-mode both

.fadeIn
  -webkit-animation-name fadeIn
    animation-name fadeIn

.fadeOut
  -webkit-animation-name fadeOut
  animation-name fadeOut

.m-toast
  z-index 2147483647
  // 只是文本
  .m-content
    position fixed
    left 0
    right 0
    bottom 9%
    text-align center
    & > span
      display inline-block
      max-width 90%
      min-width 32%
      min-height 36px
      padding 8px 15px
      font-size 14px
      color #fff
      line-height 18px
      border-radius 18px
      background: rgba(0, 0, 0, .7)
      backdrop-filter: blur(10px)
  // 包含成功与失败图标
  .m-icon-content
    position fixed
    left 50%
    top 50%
    width 110px
    height 110px
    display table
    color #FBFBFB
    transform translate(-50%, -50%)
    background: rgba(0, 0, 0, .7)
    backdrop-filter: blur(10px)
    border-radius 4px
    box-sizing border-box
    & > div
      display table-cell
      height 90px
      vertical-align middle
      & > img
        display block
        margin 0 auto
        width 36px
        height 36px
      & > div
        margin-top 10px
        text-align center
        font-size 14px
